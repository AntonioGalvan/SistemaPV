@model IEnumerable<SistemaPV.Data.Entities.CSaleDetailTemp>
@{
    ViewData["Title"] = "Create";
}

<h1>Artículos</h1>
<div>
    <a asp-action="confirmOrder" class="button-confirm">Confirmar Venta</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a asp-action="increase" asp-route-id="@item.Id"><i class="bi bi-plus"></i></a>
                    <a asp-action="decrease" asp-route-id="@item.Id"><i class="bi bi-dash"></i></a>
                    <a asp-action="deleteItem" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
        }
        <tr>
            <td>
            </td>
            <td>
            </td>
            <td>
                <h3>Total</h3>
            </td>
            <td>
                @{ double total = 0;
                    foreach (var item in Model)
                    {
                        total += item.Amount;
                    }
                }
                <p>$@total</p>
            </td>
        </tr>
    </tbody>
</table>
<div>
    <a asp-action="addProduct" class="button"><i class="bi bi-plus-lg"></i></a>
</div>




