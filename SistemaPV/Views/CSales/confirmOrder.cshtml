@model SistemaPV.Models.addSaleViewModel
@{
    ViewData["Title"] = "Confirmar venta";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="confirmOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Text)
                        </td>
                    </tr>
                }

            </table>

            <div class="form-group">
                <label asp-for="PaidAmmount" class="control-label"></label>
                <input asp-for="PaidAmmount" class="form-control" />
                <span asp-validation-for="PaidAmmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="confirmOrder" class="button"><i class="bi bi-wallet2"></i></a>
                @*<input type="submit" value="Confirmar" class="btn btn-primary" />*@
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" class="button"><i class="bi bi-arrow-return-left"></i></a>
</div>
