<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaPV</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle">
            <i class='bi bi-arrow-bar-right' id="header-toggle"></i>
        </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a class="nav_logo nav_link active" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door-fill nav_logo-icon"></i>
                    <span class="nav_logo-name">SistemaPV</span>
                </a>
                <div class="nav_list"> 
                    <a class="nav_link" asp-area="" asp-controller="CBrands" asp-action="Index">
                        <i class="bi bi-tags-fill nav_icon"></i>
                        <span class="nav_name">Marcas</span>
                    </a> 
                    <a class="nav_link" asp-area="" asp-controller="CCategories" asp-action="Index"> 
                        <i class="bi bi-layers-fill nav_icon"></i>
                        <span class="nav_name">Categorías</span> 
                    </a> 
                    <a href="#" class="nav_link">
                        <i class="bi bi-box-seam nav_icon"></i>
                        <span class="nav_name">Productos</span>
                    </a> 
                    <a href="#" class="nav_link">
                        <i class="bi bi-cart-check-fill nav_icon"></i>
                        <span class="nav_name">Ventas</span>
                    </a> 
                    <a href="#" class="nav_link">
                        <i class="bi bi-person-fill nav_icon"></i>
                        <span class="nav_name">Usuarios</span>
                    </a> 
                </div>
            </div> 
            <a href="#" class="nav_link"> 
                <i class="bi bi-box-arrow-left nav_icon"></i>
                <span class="nav_name">Salir</span> 
            </a>
        </nav>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
