@model SistemaPV.Data.Entities.CPurchase

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar Compra</h1>

<h3>¿Estás seguro de que deseas la compra?</h3>
<div>
    <h4>Compra</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Received)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Received)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Change)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Change)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a compras</a>
    </form>
</div>
